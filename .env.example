# .env.example
# Copy this file to .env and fill in your real values
# Place in the root of your pulse360 directory

# Database
DATABASE_URL=postgresql://pulse360:pulse360password@db:5432/pulse360

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO
MINIO_URL=http://minio:9000
MINIO_ACCESS_KEY=pulse360
MINIO_SECRET_KEY=pulse360password

# Authentication
SECRET_KEY=your-very-secure-secret-key-at-least-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Flux AI
FLUX_AI_API_KEY=your-flux-ai-api-key

# Environment
DEBUG=true
ENVIRONMENT=development